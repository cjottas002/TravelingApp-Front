<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginTitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_edit_text_background</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawableEnd">@drawable/common_ic_arrow_right</item>
    </style>

    <style name="LoginLink">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="YellowButton">
        <item name="android:background">@drawable/common_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>